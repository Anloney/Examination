<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_option_lin"
    style="@style/common_whstyle"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- 四个选项里每一个对应的每一条布局-->

    <ImageView
        android:id="@+id/adapter_select_img"
        style="@style/common_wrapstyle"
        android:background="@drawable/icon_unselected_circle_img" />

    <TextView
        android:id="@+id/adapter_option_text"
        style="@style/black_text_style"
        android:layout_marginLeft="10dp" />
</LinearLayout>