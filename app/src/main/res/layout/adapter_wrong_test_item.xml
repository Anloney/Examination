<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_matchwhstyle"
    android:orientation="vertical">

    <!-- 错题类别对应的每一条布局-->
    <LinearLayout
        style="@style/common_whstyle"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/adapter_test_no_text"
            style="@style/black_text_style" />

        <TextView
            android:id="@+id/adapter_test_right_answer_text"
            style="@style/black_text_style"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        style="@style/common_whstyle"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/adapter_test_title_text"
            style="@style/black_text_style"
            android:layout_width="match_parent"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/adapter_test_pic_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:visibility="gone" />
    </LinearLayout>
    <include
        android:id="@+id/adapter_select_listview"
        style="@style/common_matchwhstyle"
        layout="@layout/mylistview"
        android:divider="@null" />
</LinearLayout>